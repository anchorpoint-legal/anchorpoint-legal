<script>
    document.addEventListener('DOMContentLoaded', function () {
        var banner = document.getElementById('compliance-banner');
        var acceptBtn = document.getElementById('accept-compliance');

        if (banner && acceptBtn) {
            if (!localStorage.getItem('anchorpointcompliance_disclaimer_accepted')) {
                banner.style.display = 'block';
            }

            acceptBtn.addEventListener('click', function () {
                banner.style.display = 'none';
                localStorage.setItem('anchorpointcompliance_disclaimer_accepted', 'true');
            });
        }
    });
</script>
